<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tv_address"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="User Name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_text_semibold"/>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#7D7D7D"
        tools:text="0965874261"
        android:fontFamily="@font/sf_pro_text_regular"
        app:layout_constraintTop_toTopOf="@id/tv_contact_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_contact_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="24dp"/>

    <TextView
        android:textSize="14sp"
        android:textColor="#7D7D7D"
        android:fontFamily="@font/sf_pro_text_regular"
        android:id="@+id/tv_messages_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3 messages"
        app:layout_constraintTop_toBottomOf="@id/tv_contact_name"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>